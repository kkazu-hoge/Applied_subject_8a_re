<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th>
      <%= link_to follow_index_user_relationships_path(user.id) do %>
        <%= Follower.exists?(user_id: user.id) ? Follower.find_by(user_id: user.id).users.count : 0 %>
	    <% end %>
	  </th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th>
     <%= link_to follower_index_user_relationships_path(user.id) do %>
      <%= user.followers.count %>
     <% end %>
	  </th>
  </tr>
</table>

<div class='row'>
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% elsif user.followers.exists?(user_id: current_user.id)%>
  <!--% elsif Follower.find_by(user_id: current_user.id).users.exists?(id: user.id) %>-->
    <%= link_to "フォロー外す", user_relationship_path(user.id, user.relationships.find_by(follower_id: Follower.find_by(user_id: current_user.id).id).id), method: :delete, class: "btn btn-info btn-block" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id, follower_id: current_user.id), method: :post, class: "btn btn-success btn-block" %>
  <% end %>
</div>
<br>
<div class='row'>
<% if user.id != current_user.id %>
  <% if user.followers.exists?(user_id: current_user.id)&&current_user.followers.exists?(user_id: user.id)%>
    <!--%= link_to "#{user.name}さんとChatする", user_relationship_chats_path(user.id, user.relationships.find_by(follower_id: Follower.find_by(user_id: current_user.id).id).id, login_user: current_user.id), method: :get, class: "btn btn-secondary btn-block" %>-->
    <%= link_to "#{user.name}さんとChatする", user_chats_path(user.id, follower_id:current_user.id), method: :get, class: "btn btn-secondary btn-block" %>
  <% else %>
    <!--何も表示しない-->
  <% end %>
<% else %>
    <!--何も表示しない-->
<% end %>
</div>
