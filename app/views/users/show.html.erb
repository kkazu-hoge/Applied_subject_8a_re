<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', {user: @user} %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <%= render 'users/user_post_count', post_books_cnt: @post_books_cnt %>
      <h2>7日間分の投稿数</h2>
      <%= render 'users/week_post_count',
      {
        today_post_count: @today_post_count,
        previous_post_count: @previous_post_count,
        ago2_post_count: @ago2_post_count,
        ago3_post_count: @ago3_post_count,
        ago4_post_count: @ago4_post_count,
        ago5_post_count: @ago5_post_count,
        ago6_post_count: @ago6_post_count
      }
      %>
      <%= render 'users/week_post_graph',
      {
        graph_label: @graph_label.to_json.html_safe,
        graph_prot_count: @graph_prot_count
      }
      %>
      <%= render 'users/search_date_post', {user: @user} %>
    </div>
  </div>
</div>
