<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h1><%= @to_user.name %>さんとのチャット</h1>
      <table class='table'>
        <thead>
          <tr>
            <th>Message</th>
            <th>From</th>
          </tr>
        </thead>
        <tbody>
          <% @chat_index.each do |c| %>
            <tr>
              <td><%= c.message %></td>
              <td><%= User.find(c.from_user_id).name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class='row'>
        <div class='col-md-8'>
          <%= form_with model:@chat, url: user_chats_path(@to_user.id, from_user_id: @from_user.id), local:true do |f| %>
            <%= render 'layouts/errors', obj: @chat %>
            <div class="form-group">
              <%= f.text_field :message, class: "form-control introduction", id: "chat_message" %>
            </div>
            <div class="form-group">
              <% f.submit class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>